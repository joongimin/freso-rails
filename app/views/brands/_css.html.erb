<style type="text/css">
<% @brand.temporary_layout.sections.each do |section_key, layout_options| %>
  /* Style for <%= section_key %> */
  #<%= section_key %> {
    <% layout_options.each do |option_key, layout_option| %>
      <% if layout_option[:option_type].include?("css@") %>
        <% if layout_option[:option_type] == "css@font-family" %>
          font-family: "<%= layout_option[:value] %>";
        <% else %>
          <%= layout_option[:option_type].gsub("css@", "") %>: <%= layout_option[:value] %>;
        <% end %>
      <% end %>
    <% end %>
  }
<% end %>
</style>