<% if params[:ref] == "layout_templates" %>
  <% @layout_templates = layout_templates %>

  <%# Slide %>
  freso.ui_util.slide_content("#layout_template_slider", "<%=j render('brands/layout_templates') %>", {direction: "<%= params[:prev] ? "left" : "right" %>", margin: 14, duration: 800, easing: "easeOutCubic"});

  <%# Arrow %>
  <% if @layout_templates.first_page? %>
    $(".arrow.prev").fadeOut().attr("href", "");
  <% else %>
    $(".arrow.prev").fadeIn().attr("href", "<%= select_layout_brand_path(@brand, :page => @layout_templates.current_page - 1, :prev => true, :ref => "layout_templates") %>");
  <% end %>
  <% if @layout_templates.last_page? %>
    $(".arrow.next").fadeOut().attr("href", "");
  <% else %>
    $(".arrow.next").fadeIn().attr("href", "<%= select_layout_brand_path(@brand, :page => @layout_templates.current_page + 1, :ref => "layout_templates") %>");
  <% end %>

  <%# Page Number %>
  $(".page_indicator .current_page").text("<%= @layout_templates.current_page %>");

  <%= render "shared/history", :path => select_layout_brand_path(@brand, :page => @layout_templates.current_page) %>
<% else %>
  <% content_for :step do render("brands/select_layout") end %>
  <%= render("brands/step", :step => GuideStep::SELECT_LAYOUT) %>
  <%= render("shared/history", :path => select_layout_brand_path(@brand)) %>
<% end %>