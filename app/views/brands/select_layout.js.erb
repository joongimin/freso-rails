<% @layout_templates = layout_templates %>

<%# Slide %>
freso.ui_util.slide_content("#layout_template_slider", "<%=j render('brands/layout_templates') %>", {direction: "<%= params[:prev] ? "left" : "right" %>", margin: 14, duration: 800, easing: "easeOutCubic"});

<%# Arrow %>
<% if @layout_templates.first_page? %>
  $(".arrow.prev").fadeOut().attr("href", "");
<% else %>
  $(".arrow.prev").fadeIn().attr("href", "<%= select_layout_brand_path(@brand, :page => @layout_templates.current_page - 1, :prev => true) %>");
<% end %>
<% if @layout_templates.last_page? %>
  $(".arrow.next").fadeOut().attr("href", "");
<% else %>
  $(".arrow.next").fadeIn().attr("href", "<%= select_layout_brand_path(@brand, :page => @layout_templates.current_page + 1) %>");
<% end %>

<%# Page Number %>
$(".page_indicator .current_page").text("<%= @layout_templates.current_page %>");

<%= render "shared/history", :path => select_layout_brand_path(@brand, :page => @layout_templates.current_page) %>