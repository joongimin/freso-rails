<h1>Listing routes</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Hash Key</th>
      <th>Url</th>
      <th>Created At</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= link_to route.id, route %></td>
        <td><%= link_to route.hash_key, "/#{route.hash_key}", target: '_blank' %></td>
        <td><%= link_to route.url, route.url, target: '_blank' %></td>
        <td><%= l(route.created_at, format: :short) %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @routes %>

<%= link_to 'New Route', new_route_path %>
