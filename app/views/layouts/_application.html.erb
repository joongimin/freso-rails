<% title_prefix = "#{t("freso")} - " %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= title_prefix %><%= content_for?(:title) ? yield(:title) : t("default_page_title") %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= yield :head %>
    <%= csrf_meta_tags %>
    <% view_path = "#{Rails.root}/app/views/" %>
    <% Dir.glob("#{view_path}**/*.mustache", File::FNM_PATHNAME).each do |f| %>
      <% f = f.gsub(view_path, "") %>
      <%= content_tag :script, :type => "text/html", :id => f.gsub("/", "_").gsub(".html.mustache", "") do %>
        <%= render :template => f %>
      <% end %>
    <% end %>
  </head>
  <%= content_tag :body, :data => {
    :controller => controller.controller_path,
    :action => controller.action_name,
    :"default-locale" => I18n.default_locale,
    :locale => I18n.locale,
    :"root-url" => root_url,
    :"nuvo-logout-url" => "#{Settings.nuvo_site}/#{I18n.locale}/users/sign_out?next=#{sessions_logged_out_url}",
    :"title-prefix" => title_prefix
  } do %>
    <ul id="body_slider">
      <%= content_tag :li, :class => "body_slide #{controller.controller_path} #{controller.action_name}" do %>
        <%= render "shared/flash", :flash => flash %>
        <%= yield :body %>
      <% end %>
    </ul>
  <% end %>
</html>