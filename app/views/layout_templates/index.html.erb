<h1>Listing layout_templates</h1>

<table class="admin_table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Image</th>
    <th>Template</th>
    <th></th>
    <th></th>
  </tr>

<% @layout_templates.each do |layout_template| %>
  <tr>
    <td><%= layout_template.name %></td>
    <td><%= layout_template.description %></td>
    <td><%= image_tag(layout_template.image.image_url) if layout_template.image.image? %></td>
    <td><%= layout_template.option_value_encoded %></td>
    <td><%= link_to 'Show', layout_template %></td>
    <td><%= link_to 'Edit', edit_layout_template_path(layout_template) %></td>
    <td><%= link_to 'Destroy', layout_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Layout template', new_layout_template_path %>
